{
	"name": "api-hub",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"client": "npm run dev --prefix client",
		"build": "cd client && npm run build",
		"server": "npm run server --prefix server",
		"start": "cd server && node index.js",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"production": "concurrently \"npm run start\" \"npm run build\"",
		"postinstall": "npm install --prefix client && npm install --prefix server"
	},
	"keywords": [],
	"author": "Max Evans",
	"license": "MIT",
	"description": "A respository for Project Exodus REST APIs to use technological company solutions.",
	"devDependencies": {
		"concurrently": "^8.2.2"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"dotenv": "^16.4.5",
		"email-deep-validator": "^3.3.0",
		"express": "^4.19.2"
	}
}
